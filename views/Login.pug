doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="stylesheet", href="main.css")
        title Pypiro Login
    body(class="text-center")
        div(class="container-signing")
            form(action="/Login", method="POST")
                img(src="/Pypiro-logos_black.png", alt="", srcset="" style="max-width: 100px")
                h1(class="h3 mb-3 fw-normal") Welcome Back
                div(class="line-space")
                    label(for="email") 
                    input(type="text" id="email" name="email" class="form-control" placeholder="Email") 
                div(class="line-space")
                    label(for="password" )
                    input(type="text" id="password" name="password" class="form-control" placeholder="Password") 
                div(class="checkbox mb-3 line-space")
                    button(type="submit" class="w-100 btn btn-lg btn-primary") Log In