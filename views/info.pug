doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="stylesheet", href="main.css")
        script(type="text/javascript" script src="https://kit.fontawesome.com/eff4b95ebd.js" crossorigin="anonymous") 
        script(type="text/javascript" src="clicked.js") 
        title Search

    body(class="body")
        //-Nav Bar 
    nav(class="navbar navbar-expand-lg navbar-color")
        div(class="container-fluid")
            a(href="/homepage")
                img(class="navbar-brand navbar-img" href="/homepage" src="/Pypiro-logos.jpeg")
            form(action="/homepage", method ='POST' class="d-flex")     
                label(for="gametitle")
                input(name = "gametitle" placeholder= "Find Game" class="form-control me-2 form-control-nav")
                button(type = "Submit" class="btn btn-secondary btn-secondary-icon")
                    i.fa-solid.fa-magnifying-glass(class="hidden-icon")
                    span(class="search-btn-text") Search

                    //- DropDown
            div(class="dropdown") 
                button(class="btn btn-secondary dropdown-toggle btn-navbar" type="button" data-bs-toggle="dropdown" aria-expanded="false") 
                    i.fa-solid.fa-user(class="hidden-icon")
                    span(class="profile-btn-text") Profile
                ul(class="dropdown-menu")
                    li
                        a(class="dropdown-item" href="#") Settings
                    

            div.logout 
                a(href="//localhost:3000/logout")
                    button(class="btn btn-secondary")
                        i.fa-solid.fa-arrow-right-from-bracket(class="hidden-icon")
                        span(class="logout-btn-text") Log out  

    main(role="main" class="container")
        div(class="d-flex align-items-center p-3 my-3 text-white-50 navbar-color rounded box-shadow" )
            img(src="/Pypiro-logos.jpeg", alt="", srcset="" class="mr-3" style="max-width: 12%")
            div(class="lh-100 space-right")
                h6(class="mb-0 text-white lh-150") Welcome Back 
            div(class="lh-100 text-center space-right")
                h1(class="h6 mb-0 text-white lh1")=`${currentAmount}`
                small Collection
            div(class="lh-100 text-center space-right")
                h1(class="h6 mb-0 text-white lh1")=`${diff}`
                small Missing
            div(class="lh-100 text-center space-right")
                h1(class="h6 mb-0 text-white lh1") 10035
                small Total Games
        //-Cards
        div(class="my-3 p-3 bg-white rounded box-shadow container-cards" style="max-height: 250px")
            each game in games
                div(class="card mb-3 shadow p-3 mb-5 bg-body rounded " style="max-height:200px; max-width: 450px")
                        div(class="row g-0")
                            div(class="col-md-4 center")
                                img(src=`${game.image}`, alt="", srcset="", class="img-fluid rounded-start" style="height: 102px")
                            div(class="col-md-5 center")
                                div(class="card-body center-middle")
                                    p(class="card-title")=`${game.name}`
                                    //- p(class="text-muted text-truncate", style="font-size: 10px;")=`${game.summary}`
                                    
                            div(class="btn-group-sm col-md-3 w-20 center-button")
                                    if game.hasGame === true
                                        i(class="fa-solid fa-check-double fa-bounce space-bottom" style="color: light-blue;") Added
                                        a(href="//localhost:3000/homepage")
                                            button(class="btn btn-danger" onClick=`removeGame(${game.id})`) Remove  
                                    else
                                        a(href="//localhost:3000/homepage")
                                            button(class="btn btn-success space-bottom" onClick=`addGame(${game.id})`) Add  
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")   
                                    
        






    



                    









